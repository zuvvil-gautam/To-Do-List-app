<!-- HTMl section for main home page -->
<link rel="stylesheet" href="/css/home.css">
<div class="form_class">
    <form action="/create_todo" method="POST">
        <div class="desc_Class">
            <input type="textarea" required name="desc" placeholder="what do you need to do">
        </div>
        <div class="select_and_input">
            <select name="category" required>
                <option value="" disabled selected>Select your option</option>
                <option>Personal</option>
                <option>Work</option>
                <option>Claeaning</option>
                <option>Otheres</option>
            </select>
            <input class="datesValues" type="date" name="dateValue" placeholder="Due data dd/mm/yyyy" required>
        </div>
        <button class="buttonDesign colorGrey" id="submitButton" type="submit"><i class="fa fa-plus-square"> </i> Add
            Task</button>
        <button class="buttonDesign colorRed" id="deleteButton" type="submit"><i class="fa fa-trash-o"></i> Delete
            Task</button>

    </form>

</div>





